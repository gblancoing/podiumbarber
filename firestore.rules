rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // -- Existing Rules --

    // Allow read access to services
    match /services/{serviceId} {
      allow read: if true;
    }

    // Allow read access to stylists
    match /stylists/{stylistId} {
      allow read: if true;
    }

    // Allow creating bookings
    match /bookings/{bookingId} {
      allow read, create: if true;
      allow update, delete: if false;
    }

    // Allow reading reservations (for availability checking)
    match /reservations/{reservationId} {
      allow read: if true;
      allow create: if true;
      allow update, delete: if false;
    }

    // -- New Rule --
    
    // Allow anyone to read the available time slots for any stylist
    match /stylists/{stylistId}/availableSlots/{slotId} {
      allow read: if true;
    }
  }
}
